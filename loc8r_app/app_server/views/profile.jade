extends layout

block content
  .row
    .col-md-6.col-md-offset-3
      .panel.panel-default
        .panel-heading
          h2.panel-title Profile
        .panel-body
          if username && email
            p
              b Username: 
              | #{username}
            p
              b Email: 
              | #{email}
          else
            p You are not logged in.
          a.btn.btn-primary(href='/logout') Logout
